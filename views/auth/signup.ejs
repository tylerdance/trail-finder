<h3 id="sign-up-message">Off Road Trail Finder</h3>
<h2 id="sign-up-message">Please create an account to continue</h2>

<div id="signUp">
  <form action="/auth/signup" method="POST">
    <div class="form-row">
      <div class="col">
        <label for="new-email"></label>
        <input id="new-email" type="text" name="email" class="form-control" placeholder="Email">
      </div>

      <div class="col">
        <label for="new-name"></label>
        <input id="new-name" type="text" name="name" class="form-control" placeholder="Name">
      </div>
     
      <div class="col">
        <label for="new-password"></label>
        <input id="new-password" type="password" name="password" class="form-control" placeholder="Password (at least 9 characters)">
      </div>

    </div>
    <input type="submit" value="Sign up" class="btn btn-primary" id="sign-up-btn">
  </form>
</div>
